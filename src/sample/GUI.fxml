<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" vgap="10" xmlns="http://javafx.com/javafx/null" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <HBox alignment="CENTER_LEFT" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0"
         prefWidth="200.0" GridPane.halignment="LEFT" GridPane.hgrow="NEVER" GridPane.valignment="CENTER"
         GridPane.vgrow="NEVER">
      <TextField fx:id="keyValBox" alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="85.0"
                 promptText="Key Value" HBox.hgrow="NEVER">
         <HBox.margin>
            <Insets left="10.0"/>
         </HBox.margin>
      </TextField>
      <Button fx:id="encryptBut" mnemonicParsing="false" onAction="#encrypt_function" text="Encrypt"
              textAlignment="CENTER">
         <HBox.margin>
            <Insets left="10.0"/>
         </HBox.margin>
      </Button>
      <Button fx:id="decryptBut" mnemonicParsing="false" onAction="#decrypt_function" text="Decrypt"
              textAlignment="CENTER">
         <HBox.margin>
            <Insets left="10.0"/>
         </HBox.margin>
      </Button>
      <GridPane.margin>
         <Insets bottom="-10.0"/>
      </GridPane.margin>
   </HBox>
   <TextArea fx:id="inputBox" promptText="Message" wrapText="true" GridPane.halignment="CENTER"
             GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
      <GridPane.margin>
         <Insets left="10.0" right="10.0"/>
      </GridPane.margin>
   </TextArea>
   <TextArea fx:id="outputBox" editable="false" wrapText="true" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
             GridPane.rowIndex="2" GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS">
      <GridPane.margin>
         <Insets bottom="10.0" left="10.0" right="10.0"/>
      </GridPane.margin>
   </TextArea>
</GridPane>
